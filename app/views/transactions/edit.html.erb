<%= form_for @transaction, :url => {:action => :edit} do |f| %>
  <%= f.label :amount, 'Quantidade' %>
  <%= f.text_field :amount %>
  <%= f.label :quotation, 'Cotação' %>
  <%= f.text_field :quotation %>
  <%= f.label :currency, 'Moeda' %>
  <%= f.select :currency, [['Dólar', 'dollar'], ['Real', 'real']] %>
  <%= f.label :transaction_type, 'Tipo' %>
  <%= f.select :transaction_type, [['Venda', 'sell'],['Compra', 'buy']]%>
  
  <%= f.submit 'Editar', class: "button btn_submit" %>
  <%= link_to 'Cancelar', transaction_path(@transaction), class: "button btn_cancel" %>
<% end %>