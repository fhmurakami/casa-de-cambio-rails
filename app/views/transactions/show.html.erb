<h3>Identificador</h3>
<p><%= @transaction.id %></p>
<h3>Quantidade</h3>
<p><%= @transaction.amount %></p>
<h3>Moeda</h3>
<p><%= @transaction.translate(@transaction.currency) %></p>
<h3>Cotação</h3>
<p><%="$ #{@transaction.quotation}"%></p>
<h3>Tipo</h3>
<p><%= @transaction.translate(@transaction.transaction_type) %></p>
<h3>Data</h3>
<p><%= @transaction.created_at.strftime('%d/%m/%Y') %></p>
<h3>Total</h3>
<p><%="$ #{@transaction.total(@transaction)}"%></p>

<%= link_to 'Editar', edit_transaction_path(@transaction) %>
<%= link_to 'Apagar', transaction_path(@transaction), method: :delete,
    data: {confirm: 'Quer apagar esta transação?'} %>

<%= link_to 'Voltar', root_path %>