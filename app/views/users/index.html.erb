<% if @users.empty? %>
  <div class="alert">
    <p>Nenhum usu√°rio cadastrado</p>
  </div>
<% else %>
  <table class="ls-table ls-no-hover ls-table-striped ls-bg-header">
    <thead>
      <tr>
        <th>Identificador</th>
        <th>Nome</th>
        <th>E-mail</th>
        <th>CPF</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.id, user_path(user) %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.cpf %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>