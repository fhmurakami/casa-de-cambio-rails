<%= form_for @user, :url => {:action => :edit} do |f| %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>
  <%= f.label :email, 'E-mail' %>
  <%= f.text_field :email %>
  <%= f.label :cpf, 'CPF' %>
  <%= f.text_field :cpf %>
  
  <%= f.submit 'Editar', class: "button btn_submit" %>
  <%= link_to 'Cancelar', user_path(@user), class: "button btn_cancel" %>
<% end %>