<!DOCTYPE html>
<html>
  <head>
    <title>CasaCambioRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:alert] %>
      <div class="alert">
        <%= flash.now[:alert] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
